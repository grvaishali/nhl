<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_home"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <EditText
                android:id="@+id/editText_items_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_search_black_24dp"
                android:drawableLeft="@drawable/ic_search_black_24dp"
                android:drawablePadding="5dp"

                android:hint="Enter Position"
                android:inputType="text" />
        </TableRow>
    <TableRow>


        <Button
            android:id="@+id/teamPlayer_number"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:background="@drawable/table_header_cell_bg"
            android:text="@string/teamPlayer_number"
            android:textColor="@color/colorPrimaryDark"
            android:drawableStart="@drawable/ic_import_export_black_24dp"
            android:drawableLeft="@drawable/ic_import_export_black_24dp"
            android:textSize="18sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/teamPlayer_image"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:background="@drawable/table_header_cell_bg"
            android:text="@string/image"
            android:textSize="18sp" />


        <Button
            android:id="@+id/teamPlayer_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:drawableStart="@drawable/ic_import_export_black_24dp"
            android:drawableLeft="@drawable/ic_import_export_black_24dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/table_header_cell_bg"
            android:text="@string/playerName"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/teamPlayer_position"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="@drawable/table_header_cell_bg"
            android:text="@string/teamPlayer_Position"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:gravity="center"/>

    </TableRow>
        <TableRow android:layout_width="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/teamPlayers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/teamplayers" />
        </TableRow>
    </TableLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>