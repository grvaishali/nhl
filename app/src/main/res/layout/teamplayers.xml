<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/teamPlayer_card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_margin_horizontal"
    card_view:cardBackgroundColor="@color/colorTextBackground"
    card_view:cardPreventCornerOverlap="false">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1dp"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:id="@+id/teamPlayer_number"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/teamPlayer_Position"
            android:textSize="18sp"
            android:gravity="center"/>


        <ImageView
            android:id="@+id/teamPlayer_image"
            android:layout_width="0dip"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/image"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/teamPlayer_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/playerName"
            android:textSize="18sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/teamPlayer_position"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_weight="3"
            android:background="@drawable/table_content_cell_bg"
            android:text="@string/teamPlayer_Position"
            android:editable="false"
            android:textSize="18sp"
            android:gravity="center"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>